srcdir = @srcdir@
VPATH = @srcdir@

rootdir = $(srcdir)/..
@MCFG@@MCF@

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

#
# Distribution variables
#

DISTSYNTAX = Makefile.in $(ALLSYNTAX)
ALLSYNTAX =			\
	ada95.syntax		\
	c.syntax		\
	changelog.syntax	\
	diff.syntax		\
	diffc.syntax		\
	html.syntax		\
	java.syntax		\
	latex.syntax		\
	lsm.syntax		\
	mail.syntax		\
	makefile.syntax		\
	ml.syntax		\
	nroff.syntax		\
	pascal.syntax		\
	perl.syntax		\
	python.syntax		\
	sh.syntax		\
	smalltalk.syntax	\
	swig.syntax		\
	texinfo.syntax		\
	unknown.syntax

all:

Makefile: Makefile.in ../config.status
	(cd ..; CONFIG_FILES=syntax/Makefile CONFIG_HEADERS= ./config.status)


install: Makefile
	for I in $(ALLSYNTAX); \
	do $(INSTALL_DATA) $(srcdir)/$$I $(DESTDIR)$(syntaxdir)/$$I; done

uninstall:
	for I in $(ALLSYNTAX); \
	do $(RMF) $(DESTDIR)$(syntaxdir)/$$I; done
	-rmdir $(DESTDIR)$(syntaxdir)

check:
	@echo no tests are supplied.

TAGS:

cross:

clean:

realclean:

distclean:
	-$(RMF) $(srcdir)/*~ $(srcdir)/Makefile

distcopy:
	for I in $(DISTSYNTAX); do $(CP) $(top_srcdir)/syntax/$$I $(top_srcdir)/mc-$(VERSION)/syntax; done

depend dep:
