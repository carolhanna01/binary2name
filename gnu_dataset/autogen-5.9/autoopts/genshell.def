owner          = "Bruce Korb";
prog_name      = "genshellopt";
prog_title     = "Generate Shell Option Processing Script";
long_opts;
usage          = genshelloptUsage;

version = 1;

flag = {
    name      = script;
    value     = o;
    arg_type  = string;
    descrip   = "Output Script File";
};

flag = {
    name      = shell;
    disable   = no;
    enabled;
    value     = s;
    arg_type  = string;
    descrip   = 'Shell name (follows "#!" magic)';
};
#ifdef LATER
flag = {
    name      =  name_prefix;
    disable   =  no;
    arg_type  = string;
    descrip   =  "Prefix for option variable names";
    value     =  p;
};

flag = {
    name      =  case;
    disable   =  down;
    enable    =  up;
    enabled;
    descrip   =  "character case of variable names";
};
#endif /* LATER */
explain =
"Note that `shell' is only useful if the output file does not already
exist.  If it does, then the shell name and optional first argument
will be extracted from the script file.";

detail =
"If the script file already exists and contains Automated Option Processing
text, the second line of the file through the ending tag will be replaced
by the newly generated text.  The first `#!' line will be regenerated.";
