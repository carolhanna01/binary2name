pkgname=ccscript
pkgver=@VERSION@
pkgrel=0
epoch=9
pkgdesc="The GNU ccScript C++ scripting engine"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/ccscript/"
license=('GPL' 'custom')
depends=('ucommon>=@USES_UCOMMON_REQUIRED@' 'pkgconfig')
options=('!libtool')
source=("$pkgname-$pkgver.tar.gz")
md5sums=('SKIP')

build() {
  cd ${pkgname}-${pkgver}
  ./configure --prefix=/usr --with-pkg-config
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
