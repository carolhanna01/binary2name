# Usage gen_html_quick <mainmodule> <modifiedmodule>
#  re-Generate some html quickly by not generating all data

echo $1

echo "\n******************** WARNING ****************************"
echo "This process generates a huge number of files.  "
echo "Make sure you give it its own directory...."
echo "*********************************************************"
echo "Running non-interactive browser ..."
$SATHER_HOME/Bin/sabrowse -non_interactive $SATHER_HOME/Browser/Web/dump-pre-html-dot $1

echo "\n************************************************************"
echo "            GENERATING SHORT FLAT FILES (shortflat- )"
echo "(really slow - regular expressions make tcl crawl)"
echo "************************************************************"
$SATHER_HOME/Browser/Web/gen_html_shortflat $2
echo "\n************************************************************"
echo "            GENERATING HTMLIFIED SATHER FILES (lined-)"
echo "************************************************************"
$SATHER_HOME/Browser/Web/gen_html_sa_files
