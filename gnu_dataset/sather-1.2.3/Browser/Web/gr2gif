rm -f *ppm
rm -f *.gif
rm -f *.ps

for i in *.gr ; do 
   echo	"Browser/Web/gr2gif:Running dot. Generating" $i
   $SATHER_HOME/Browser/Web/graph2dot $i
   dot -Tps -o${i}.ps ${i}.dot
   echo "Browser/Web/gr2gif: Running gs..."
   # jpg quality is pretty bad - all kinds of speckling
   # is introduced, making the image not very readable, 
   # especially when printed.
   # Use the -debug option below if things don't work
   $SATHER_HOME/Browser/Web/ps2gif -gif -crop ${i}.ps
   # $SATHER_HOME/Browser/Web/gif2jpg ....
done

rm -f *ppm
rm -f *.ps
