#ifndef SPINLOCK_CONFIG
#define SPINLOCK_CONFIG

#ifdef PP
#undef PP
#endif

#ifdef I
#undef I
#endif

#ifdef E
#undef E
#endif

#ifdef B
#undef B
#endif

#define PP	no_pre,no_post
#define I	import
#define E	export
#define B	block
#define V	var "@r $$;"
#define VOL	volatile

-- most of the functions and macros used in this file are defined
-- in am.h, the rest in pSather.h
SPINLOCK_INIT:			PP,VOL,exec "SPINLOCK_CREATE($0);";
SPINLOCK_L_LCK:			PP,VOL,exec "SPINLOCK_LCK($0);";
SPINLOCK_L_UNLCK:		PP,VOL,exec "SPINLOCK_UNLCK($0);";
SPINLOCK_L_TRY:			PP,VOL,V,exec "$$=SPINLOCK_TRY($0);" "$$";
SPINLOCK_LCK:			PP,VOL,exec "if (FAR($0)) {spinlock_lck_remote($0);} else {SPINLOCK_LCK($0);}";
SPINLOCK_UNLCK:			PP,VOL,exec "if (FAR($0)) {spinlock_unlck_remote($0);} else {SPINLOCK_UNLCK($0);}";
SPINLOCK_TRY:			PP,VOL,V,exec "if (FAR($0)) {$$=spinlock_try_remote($0);} else {$$=SPINLOCK_TRY($0);}" "$$";
#endif
