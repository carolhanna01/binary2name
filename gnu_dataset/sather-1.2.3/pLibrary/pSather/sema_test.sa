class TEST_SEMA is
   include R_TEST;

   main is
      s:SEMA;
      class_name("SEMA");
      s:=#(1);

      test("try",s.try,true);
      test("try",s.try,false);
      s.signal;
      test("signal",s.try,true);
      loop
         i::=0.upto!(10);
         s.signal;
      end;	

      loop
         i::=0.upto!(10);
         s.wait;
      end;

      test("signal/wait", s.try, false);		
      finish;
   end;
end;
	 
