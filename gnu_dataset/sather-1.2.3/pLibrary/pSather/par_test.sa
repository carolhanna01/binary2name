class TEST_PAR is
   include R_TEST;
    
   main is
      class_name("PAR/PARLOOP");
      i::=0;
      par
         fork@1%clusters
	    test("par 1",i,0);
	    i:=1;
	    sync;
	    sync;
	    test("par 3",i,2);
	 end;
	 fork@2%clusters
	    sync;
	    test("par 2",i,1);
	    i:=2;
	    sync;
	 end;
      end;
      finish;
   end;
    
end; -- class GATE_TEST

