class TEST_CLUSTER is
   include R_TEST;

   testit(i:INT,out j:INT,inout k:INT):INT is
      test("cluster_id",i.str+" "+k,here.str+" "+here);
      j:=here*2;
      k:=here*3;
      return here*4
   end;

   main is
      class_name("CLUSTERS");
      s:FSTR:=#;
      t:FSTR;
      test("local create 1",near(s).str+' '+far(s),"true false");
      test("where 1",where(s),here);
      with s,t  near
         test("with near 1",true,true);
      else
         test("with near 1",false,true);
      end;
      if clusters>1 then
         s:=#@(here+1)%clusters;
         test("local create 2",near(s).str+' '+far(s),"false true");
         test("where 2",where(s),(here+1)%clusters);
         with s near
            test("with near 2",false,true);
         else
            test("with near 2",true,true);
         end;
      else
         #ERR+"\nThis test (CLUSTERS) needs at least two clusters to be meaningful\n";
      end;
      finish;
   end;
end;

