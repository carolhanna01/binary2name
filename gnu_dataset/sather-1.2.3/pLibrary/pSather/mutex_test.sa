class TEST_MUTEX is
   include R_TEST;

   other(l:MUTEX):BOOL is
      lock l then
         return true;
      else
	 return false;
      end;
   end;

   main is
      class_name("MUTEX");
      l::=#MUTEX;

      lock l then
         test("lock",true,true);
	 lock l then
	    test("lock 2",true,true);
	    test("lock other cluster",other(l)@1%clusters,true);
	    par
	       test("other thread",other(l),false);
	    end;
	 else
	    test("lock 2",false,true);
	 end;
--	 unlock l;
--	 par
--	    test("other thread 2",other(l),true);
--	 end;
      else
         test("lock",false,true);
      end;
      finish;
   end;
end; -- class GATE_TEST

