class TEST_SPINLOCK is
   include R_TEST;

   rem(l1:SPINLOCK) is
      test("try",l1.try,true);
      test("try",l1.try,false);
      l1.unlck;
      test("unlock",l1.try,true);
      l1.unlck;
      l1.lck;
      test("lock",l1.try,false);
      l1.unlck;
      test("unlock 2",l1.try,true);
      l1.unlck;
   end;

   main is
      class_name("SPINLOCK");
      l1::=#SPINLOCK;

      test("l_try",l1.l_try,true);
      test("l_try",l1.l_try,false);
      l1.l_unlck;
      test("l_unlock",l1.l_try,true);
      l1.l_unlck;
      l1.l_lck;
      test("l_lock",l1.l_try,false);
      l1.l_unlck;
      test("l_unlock 2",l1.l_try,true);
      l1.l_unlck;
      rem(l1);
      rem(l1)@1%clusters;

      finish;
   end;
end;
	 
