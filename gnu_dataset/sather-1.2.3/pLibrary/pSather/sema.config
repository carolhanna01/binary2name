#ifndef SEMA_CONFIG
#define SEMA_CONFIG

#ifdef PP
#undef PP
#endif

#ifdef I
#undef I
#endif

#ifdef E
#undef E
#endif

#ifdef B
#undef B
#endif

#define PP	no_pre,no_post
#define I	import
#define E	export
#define B	block
#define V	var "@r $$;"
#define VOL	volatile

-- most of the functions and macros used in this file are defined
-- in am.h, the rest in pSather.h
SEMA_CREATE:			PP,VOL,exec "SEMA_CREATE($1);";
SEMA_WAIT:			PP,VOL,exec "SEMA_WAIT($0);";
SEMA_SIGNAL:			PP,VOL,exec "SEMA_SIGNAL($0);";
SEMA_TRY:			PP,VOL,V,exec "$$=SEMA_TRY($0);" "$$";
SEMA_DELETE:			PP,VOL,exec "SEMA_DELETE($0);";
#endif
