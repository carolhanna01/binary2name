#ifndef PID_CONFIG
#define PID_CONFIG

#ifdef PP
#undef PP
#endif

#ifdef I
#undef I
#endif

#ifdef E
#undef E
#endif

#ifdef B
#undef B
#endif

#define PP	no_pre,no_post
#define I	import
#define E	export
#define B	block
#define V	var "@r $$;"

-- most of the functions and macros used in this file are defined
-- in am.h, the rest in pSather.h
THREAD_ID_NIL:			PP,V,exec "$$=BR_INVALID_ID();" "$$";
THREAD_ID_ME:			PP,V,exec "$$=PSATHER_THREAD_ID;" "$$";
THREAD_ID_IS_EQ:		PP,V,exec "$$=BR_SAME_THREAD($0,$1);" "$$";
THREAD_ID_IS_LT:		PP,V,exec "$$=BR_THREAD_LT($0,$1);" "$$";
THREAD_ID_HASH:			PP,V,exec "$$=BR_THREAD_HASH($0);" "$$";
THREAD_ID_STR:			PP,var "@r $$;char $$p[30];",
				   exec "thr_print_id($0,$$p);"
				        "$$=(@r)rt_arr_alloc(sizeof(struct STR_struct),STR_tag,sizeof(CHAR),strlen($$p)+1);"
					"$$->asize=strlen($$p);"
					"strcpy($$->arr_part,$$p);"
					"$$";
#endif
