abstract class  $REENTRANT is
   visitor:$READER_LOCK;
   mutator:$WRITER_LOCK;
end;

class VISITOR_MUTATOR is
   private attr vm_rwl:FRW_LOCK;
   init_visitor_mutator is vm_rwl:=#FRW_LOCK; end;
   visitor:$READER_LOCK is return vm_rwl.reader; end;
   mutator:$WRITER_LOCK is return vm_rwl.writer; end;
end;
