-- test-cb.sa: Test c-to-sather callbacks
-- Author: Benedict A. Gomes <gomes@samosa.ICSI.Berkeley.EDU>

class TEST_CB is
   include TEST;
   
   main is
      class_name("External Callbacks");
      res ::= CALLBACK_TEST::sather_to_c_call(11);
      test("call",res,66);
      finish;
   end;
   
   
end; -- class TEST_CB
-------------------------------------------------------------------
external class CALLBACK_TEST is
   
   sather_to_c_call(num: INT): INT;
   -- Returns num+the value returned by c_to_sather_callback = num+55
   
   c_to_sather_callback: INT is return 55 end;
      
end;
