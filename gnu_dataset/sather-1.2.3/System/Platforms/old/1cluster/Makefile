all: libam.a

libam.a:	Makefile ../../../pSather/am/*.[ch]
	@ echo Making am library for platform old/1cluster;		\
	(cd ../../../pSather/am; touch Makefile; 			\
		HEADERDIR=../../Platforms/old/1cluster 		\
		LIBDIR=../../Platforms/old/1cluster 		\
		PCFLAGS="-Wall -DAM_THREADS -DSOLARIS_THREADS -D_REENTRANT" \
		CFLAGS="-g -O2"						\
		PLIBS="-lposix4 -lthread -ldl -lkstat -lelf"		\
		$(MAKE) install)

clean:
	@echo Cleaning System/pSather/am...
	@(cd ../../../pSather/am; $(MAKE) clean)
	@-$(RM) libam.a
	@-$(RM) am.h

test:
