RM=rm
CC=gcc
CP=cp
ARCH=solaris-myrinet
PCFLAGS=-Wall -I$(MYRI_HOME)/include -DAM_THREADS -DSOLARIS_THREADS -D_REENTRANT -DLANAI_NET
CFLAGS=-g -O2
PLIBS=-L${MYRI_HOME}/lib/solaris/sun4m -lLanaiDevice -lposix4 -lthread -ldl
CC=gcc
AR=/usr/ccs/bin/ar
CPP=/usr/ccs/bin/cpp -C -P
RANLIB=echo
AM_TEST=./mesg 3 1000

# The Lanai Myrinet card is somewhat special, as you cannot compile the
# driver for the card on a solaris machine. Hence you have 
# to define a command on how to compile it here
# You can assume that the current directory is the the one
# in which you should start the make command
COMPILE_LANAI='/usr/local/bin/export -attr SunOS4.1.4 -force make install'
MYRI_HOME=/u/fleiner/prog/myrinet
CCLAN_PLUS = $(MYRI_HOME)/compiler/bin/cclan+ 
LDLAN_PLUS = $(MYRI_HOME)/compiler/bin/ldlan+ 
