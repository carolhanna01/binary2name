#! /bin/sh -e

case "$1" in
    configure|abort-upgrade|abort-remove|abort-deconfigure)
	## install info files
	install-info --quiet --section "Emacs" "sather-mode" \
	    --description="The Sather Emacs Programming Environment." \
	    /usr/info/sather-mode.info

#DEBHELPER#

    ;;

    *)
        echo "$0: unknown action \"$1\""
        exit 1
    ;;
esac

exit 0
