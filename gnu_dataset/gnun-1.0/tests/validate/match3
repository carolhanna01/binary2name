# Test groups in regexes (only works with gawk).

"${bindir}/gnun-validate-html" --expand-to=match3.1.html \
  "${srcdir}/validate/match3.0.html" || exit 1
diff "${srcdir}/validate/match3.1.html" match3.1.html || exit 1
rm match3.1.html
