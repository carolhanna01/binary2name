# Test SSI variable expansion.

"${bindir}/gnun-validate-html" --expand-to=3.1.html \
  --root "${srcdir}/validate" --apache-vars="a=test;b=value" \
  "${srcdir}/validate/3.0.html" || exit 1
diff "${srcdir}/validate/3.1.html" 3.1.html || exit 1
rm 3.1.html
exit 0
