. /etc/sauce/sys-config
cd /var/lib/sauce
exec >>/var/log/sauce-startup.log 2>&1
exec su $SAUCE_USER -c '
	set -e
	echo "`date`" sauce starting
	. /etc/sauce/sys-config
	set +e
	authbind sauce
	rc=$?
	echo "`date`" sauce terminated $rc
'
