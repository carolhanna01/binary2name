<project name="@PACKAGE_NAME@" default="build">
  <property name="sources.dir" value="@abs_srcdir@/src"/>
  <property name="build.dir" value="@abs_builddir@/bin"/>
  <property name="dist.dir" value="@abs_builddir@/dist"/>
  <property name="doc.dir" value="@abs_builddir@/javadoc"/>

  <target name="all" depends="dist,doc"/>

  <target name="build">
    <mkdir dir="${build.dir}"/>
    <javac srcdir="${sources.dir}" destdir="${build.dir}"
        includeAntRuntime="false"/>
  </target>

  <target name="dist" depends="build">
    <mkdir dir="${dist.dir}"/>
    <jar jarfile="${dist.dir}/@PACKAGE_TARNAME@.jar" basedir="${build.dir}">
      <manifest>
        <attribute name="Created-By" value="Marek Aaron Sapota"/>
      </manifest>
    </jar>
  </target>

  <target name="doc.dir.check">
    <available file="${doc.dir}" property="doc.dir.present" type="dir"/>
  </target>

  <target name="doc" depends="doc.dir.check" unless="doc.dir.present">
    <mkdir dir="${doc.dir}"/>
    <javadoc sourcepath="${sources.dir}" destdir="${doc.dir}"/>
  </target>

  <target name="clean" depends="clean-build,clean-dist,clean-doc" />

  <target name="clean-build">
    <delete dir="${build.dir}"/>
  </target>

  <target name="clean-dist">
    <delete dir="${dist.dir}"/>
  </target>

  <target name="clean-doc">
    <delete dir="${doc.dir}"/>
  </target>
</project>
