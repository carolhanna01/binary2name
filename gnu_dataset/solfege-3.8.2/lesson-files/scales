header {
    lesson_id = "afd2557c-759b-4925-9cd4-0c006bf44ef7"
  module = idbyname
  help = "scales"
  title = "Church tone scales"
  fillnum = 3
  filldir = horiz
  have_repeat_slowly_button = yes
  have_music_displayer = yes
}
tempo = 240/4

question {
  name = _("Ionian")
  rvoice("c' d e f g a b c c b a g f e d c")
}
question {
  name = _("Dorian")
  rvoice("c' d es f g a bes c c bes a g f es d c")
}
question {
 name = _("Phrygian")
 rvoice("c' des es f g as bes c c bes as g f es des c")
}
question {
 name = _("Lydian")
 rvoice("c' d e fis g a b c c b a g fis e d c")
}
question {
 name = _("Mixolydian")
 rvoice("c' d e f g a bes c c bes a g f e d c")
}
question {
 name = _("Aeolian")
 rvoice("c' d es f g as bes c c bes as g f es d c")
}
question {
 name = _("Locrian")
 rvoice("c' des es f ges as bes c c bes as ges f es des c")
}
question {
 name = _("Harmonic minor")
 rvoice("c' d es f g as b c c b as g f es d c")
}
question {
 name = _("Melodic minor")
 rvoice("c' d es f g a b c c bes as g f es d c")
}

