#!/bin/sh
#
# xlm-mail
# by Georg C. F. Greve <greve@gnu.org>
#
# This is a script for the Xlogmaster
#
# usage:
# xlm-mail <address>
#

name="$XLM_NAME"
helptext="$XLM_HELP"
mode="$XLM_MODE"
line="$XLM_LINE"
user="$*"

echo -ne "Hi !\n\nThe Xlogmaster informs you that in\n\n\
   $name ($helptext)[$mode-mode]\n\
\nthe line:\n\n\
   $line\n\
\nshowed up.\n\n\
Regards,\n\
	your Xlogmaster\
\n" | mail -s "automated Xlogmaster mail message" $user

